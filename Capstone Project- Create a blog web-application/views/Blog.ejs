<!-- Blogs can be seen by everyone but the author can edit or delete it -->
<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>


    <body class="roboto-fontStyle">


        <%- include('partials/header.ejs') %>





            <div class="container">


                <div class="row">

                    <h1>
                        <%=title%>
                    </h1>
                    <div>
                        <figcaption style="display: inline;">
                            <strong>By:</strong>
                            <%=author %>
                        </figcaption style="display: inline;">
                        <figcaption class="mb-2">
                            <strong>Post Date:</strong>
                            <%= date %>
                        </figcaption>
                    </div>


                    <p>
                        <%=(content).slice(0,600) %>
                    </p>
                    <div class="blogPostImage">
                        <img src="<%= imageLink %>" alt="Blog Post Image" class="img-fluid">
                    </div>
                    <p>
                        <%=(content).slice(600) %>
                    </p>
                    <% if(locals.Authorized===true) {%>
                        <div class="mt-4">
                            <a class="btn btn-primary px-3 me-2" href="http://localhost:3000/delete/<%=id%>">Delete</a>

                            <a class="btn btn-primary px-4"
                                href="http://localhost:3000/edit/<%=userid%>&<%=id%>">Edit</a>
                        </div>
                        <% } %>
                </div>


            </div>




            <%- include('partials/footer.ejs') %>

                <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
                    crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js"
                    integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y"
                    crossorigin="anonymous"></script>

                <script src="../../public/script.js"></script>
    </body>

</html>