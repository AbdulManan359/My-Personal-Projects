<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>


    <body class="roboto-fontStyle">



        <!-- Header Start -->
        <%- include('partials/header.ejs') %>
            <!-- Header End -->

            <!-- All Blogs Section Start -->
            <div class="container">
                <section>
                    <h1 class="mb-4">Blogs</h2>

                        <div class="row mb-2">
                            <% blogs.map((e)=>{ %>


                                <div class="col-md-6">
                                    <div
                                        class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                                        <div class="col p-4 d-flex flex-column position-static">
                                            <h3 class="mb-0">
                                                <%= e.blogtitle %>
                                            </h3>
                                            <div class="mb-1 text-body-secondary">
                                                <%= e.date_of_creation %>
                                            </div>
                                            <p class="card-text mb-auto">
                                                <%= (e.blogcontent).slice(0,175) %> .....
                                            </p> <a href=" http://localhost:3000/blogs/<%=e.blogid %>" class="icon-link gap-1
                                        icon-link-hover stretched-link">
                                                Continue reading
                                                <svg class="bi" aria-hidden="true">
                                                    <use xlink:href="#chevron-right"></use>
                                                </svg> </a>
                                        </div>
                                        <div class="col-auto d-none d-lg-block"> <img src="<%=e.imagelink%>"
                                                class="bd-placeholder-img " height="250" width="200"
                                                alt="Blog Post Image">
                                        </div>
                                    </div>

                                </div>

                                <% }) %>
                        </div>



            </div>
            <!-- All Blogs Section End -->




            <!-- Footer Start -->

            <%- include('partials/footer.ejs') %>

                <!-- Footer End -->

                <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
                    crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js"
                    integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y"
                    crossorigin="anonymous"></script>

                <script src="../../public/script.js"></script>



    </body>

</html>